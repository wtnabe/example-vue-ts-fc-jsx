{
  "compilerOptions": {
    "target": "esnext",
    "useDefineForClassFields": true,
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "checkJs": true,
    "jsx": "preserve",
    "jsxFactory": "h",
    "jsxFragmentFactory": "fragment",
    "sourceMap": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": ["esnext", "dom"],
    "skipLibCheck": true
  },
  "include": [
    "src/**/*.js", "src/**/*.ts", "src/**/*.d.ts",
    "src/**/*.jsx", "src/**/*.tsx",
    "src/**/*.vue"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
